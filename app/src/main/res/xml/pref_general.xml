<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_jarak_title"
        android:entryValues="@array/pref_jarak_values"
        android:key="optDistance"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Radius Pencarian (Km) " />

    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_jumlah_title"
        android:entryValues="@array/pref_jumlah_values"
        android:key="optMaxitem"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Hasil Pencarian Maximum " />
    <EditTextPreference
        android:defaultValue="http://192.168.58.1:8000/api/"
        android:key="optServerHost"
        android:title="Server API Host "
        />



</PreferenceScreen>
